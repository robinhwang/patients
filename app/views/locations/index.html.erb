<%= render :partial => 'layouts/select_language' %>
<h1>Location Lists</h1>
<table>
	<tr>
		<th>Name</th>
		<th>Code</th>
	</tr>

<% @locations.each do |location| %>
	<tr>
		<td><%= link_to(location.name, location_path(location)) %> </td>
		<td><%= location.code %> </td>
	</tr>
	<td><%= link_to 'Edit', edit_location_path(location) %></td>
	<td><%= link_to 'destroy', location_path(location), :method => :delete, :confirm => 'Are you sure?' %></td>
<% end %>
</table>
<%= link_to "New location", new_location_path(@location) %>

<hr>

